{
  "name": "Insert Mode Tests",
  "tests": [
    {
      "name": "Insert at cursor",
      "input": "hello",
      "commands": "iworld<Esc>",
      "cursor": [0, 0]
    },
    {
      "name": "Append after cursor",
      "input": "hello",
      "commands": "aworld<Esc>",
      "cursor": [0, 0]
    },
    {
      "name": "Insert at beginning of line",
      "input": "hello",
      "commands": "Iworld<Esc>",
      "cursor": [0, 2]
    },
    {
      "name": "Append at end of line",
      "input": "hello",
      "commands": "Aworld<Esc>",
      "cursor": [0, 2]
    },
    {
      "name": "Open line below",
      "input": "hello\nworld",
      "commands": "onew line<Esc>",
      "cursor": [0, 0]
    },
    {
      "name": "Open line above",
      "input": "hello\nworld",
      "commands": "Onew line<Esc>",
      "cursor": [1, 0]
    },
    {
      "name": "Insert with newline",
      "input": "hello",
      "commands": "i<CR>world<Esc>",
      "cursor": [0, 2]
    }
  ]
}
{
  "name": "Basic Movement Tests",
  "tests": [
    {
      "name": "Word forward movement",
      "input": "hello world",
      "commands": "w",
      "cursor": [0, 0]
    },
    {
      "name": "Character left movement",
      "input": "hello world",
      "commands": "h",
      "cursor": [0, 5]
    },
    {
      "name": "Character right movement", 
      "input": "hello world",
      "commands": "l",
      "cursor": [0, 0]
    },
    {
      "name": "Line down movement",
      "input": "hello\nworld",
      "commands": "j",
      "cursor": [0, 0]
    },
    {
      "name": "Line up movement",
      "input": "hello\nworld", 
      "commands": "k",
      "cursor": [1, 0]
    },
    {
      "name": "Multiple word movements",
      "input": "the quick brown fox",
      "commands": "2w",
      "cursor": [0, 0]
    },
    {
      "name": "End of line movement",
      "input": "hello world",
      "commands": "$",
      "cursor": [0, 0]
    },
    {
      "name": "Beginning of line movement",
      "input": "hello world",
      "commands": "0",
      "cursor": [0, 5]
    }
  ]
}